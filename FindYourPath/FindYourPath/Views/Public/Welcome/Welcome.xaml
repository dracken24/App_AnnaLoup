             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindYourPath.Views.Welcome">

    <ScrollView>
        <Frame BorderColor="#006666" 
               CornerRadius="0" 
               HasShadow="True" 
               Padding="0"
               BackgroundColor="#303030">

            <Grid Padding="8" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                
                <!-- Barre de recherche -->
                <Frame BorderColor="#006666" 
                       CornerRadius="2" 
                       HasShadow="True" 
                       BackgroundColor="#404040" 
                       Padding="10"
                       Margin="0,0,0,5"
                       Grid.Row="0">
                    <Frame BorderColor="#006666" 
                       CornerRadius="2" 
                       HasShadow="True" 
                       BackgroundColor="White" 
                       Padding="2"
                       Margin="0,0,0,0"
                       Grid.Row="0">

                        <!-- Barre de recherche -->
                        <StackLayout>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0"
                                       Source="FindYourPath/FindYourPath.Android/Resources/drawable/G_google.png"
                                       WidthRequest="35"
                                       HeightRequest="35"/>
                                
                                <Entry x:Name="searchBar"
                                       Grid.Column="1"
                                       Placeholder="Rechercher avec Google"/>
                                
                                <Button Grid.Column="2"
                                        Text="Search"
                                        Clicked="OnSearchButtonClicked"
                                        FontSize="12"/>
                                
                            </Grid>
                        </StackLayout>
                        
                    </Frame>
                </Frame>

                <!-- Text box du haut -->
                <Frame BorderColor="#006666" 
                       CornerRadius="2" 
                       HasShadow="True" 
                       BackgroundColor="#404040" 
                       Padding="10"
                       Margin="0,0,0,5"
                       Grid.Row="1">

                    <ScrollView>

                        

                        <StackLayout>

                            <Label Text="Bienvenue sur L'application"
                                       FontSize="Title"
                                       TextColor="#009A9A"
                                       HorizontalOptions="CenterAndExpand"
                                       VerticalOptions="Start" />
                            <Label Text="F-ARE!"
                                       FontSize="Title"
                                       TextColor="#009A9A"
                                       HorizontalOptions="CenterAndExpand"
                                       VerticalOptions="Start" />

                            <Label FontSize="16"
                                       TextColor="#3EC6D0"
                                       HorizontalOptions="Start"
                                       Margin="0,15,0,0"
                                       Text="Parce que nous croyons que toutes les femmes méritent leur chance"/>

                            <Label FontSize="16"
                                       TextColor="#3EC6D0"
                                       HorizontalOptions="Start"
                                       Text="Parce que nous croyons en une réinsertion saine"/>

                            <Label FontSize="16"
                                       TextColor="#3EC6D0"
                                       HorizontalOptions="Start"
                                       Text="Parce que nous croyons que toutEs méritent un petit coup de pouce"/>

                            <Label FontSize="16"
                                       TextColor="#3EC6D0"
                                       HorizontalOptions="Start"
                                       Text="Parce que nous croyons en TOI"/>

                            <Label FontSize="16"
                                       TextColor="#3EC6D0"
                                       HorizontalOptions="Start"
                                       Margin="0,20,0,0"
                                       Text="Avec F-ARE, gère tes rendez-vous, ton budget, tes ressources, et ce, dans une même application facile d'utilisation!"/>

                            <Label FontSize="16"
                                       TextColor="#3EC6D0"
                                       HorizontalOptions="Start"
                                       Margin="0,20,0,0"
                                       Text="Faite pour les femmes, par des femmes."/>

                        </StackLayout>
                    </ScrollView>
                </Frame>
                
                
                

