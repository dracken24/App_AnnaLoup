<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindYourPath.Views.Profile"
             Title="Profile">

    <ScrollView>
        <Frame BorderColor="#006666" 
                   CornerRadius="5" 
                   HasShadow="True" 
                   BackgroundColor="LightBlue" 
                   Padding="0">
            
        <StackLayout Padding="20">
            <Image x:Name="profileImage" 
                   Source="Scrat_02.jpg"
                   WidthRequest="200"
                   HeightRequest="200"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"/>

            <Label Text="Nom" FontAttributes="Bold" TextColor="Black" />
            <Label x:Name="nameLabel" TextColor="Black" />

            <Label Text="Adresse" FontAttributes="Bold" TextColor="Black" />
            <Label x:Name="addressLabel" TextColor="Black" />

            <Label Text="Téléphone" FontAttributes="Bold" TextColor="Black" />
            <Label x:Name="phoneLabel" TextColor="Black" />
        </StackLayout>
        </Frame>
        
    </ScrollView>

</ContentPage>
    