<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindYourPath.Views.Resources">


    <StackLayout>

        <Entry x:Name="nameEntry" Placeholder="Nom de l'organisme" TextColor="Black" PlaceholderColor="Gray" />

        <Entry x:Name="addressEntry" Placeholder="Adresse" TextColor="Black" PlaceholderColor="Gray" />

        <Entry x:Name="phoneEntry" Placeholder="Numéro de téléphone" TextColor="Black" PlaceholderColor="Gray" />

        <Entry x:Name="type" Placeholder="Type de contacte" TextColor="Black" PlaceholderColor="Gray" />

        <Button Text="Ajouter une ressource" Clicked="OnAddResourceButtonClicked"/>

        <ListView x:Name="resourceList" ItemTapped="OnItemTapped" BackgroundColor="#ccccff" SeparatorColor="Black" />

    </StackLayout>

</ContentPage>