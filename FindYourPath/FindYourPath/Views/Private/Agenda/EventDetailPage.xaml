                <Button Grid.Row="1"
                        x:Name="addEventButton" 
                        Text="Modifie Evenement" 
                        Clicked="OnModifyButtonClicked"
                        TextColor="#006666"/>

            </Grid>
        </Frame>
    </ScrollView>

</ContentPage>

