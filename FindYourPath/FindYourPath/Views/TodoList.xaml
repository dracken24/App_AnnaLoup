<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindYourPath.Views.TodoList"
             BackgroundColor="LightBlue">

    <StackLayout>

        <Entry x:Name="newTaskEntry" Placeholder="Nouvelle tache" TextColor="Black" PlaceholderColor="Gray"/>
        <Button Text="Ajoutez une tache" Clicked="OnAddTaskButtonClicked"/>

        <ListView x:Name="taskList" ItemTapped="OnTaskTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding .}" TextColor="Orchid" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>

</ContentPage>
